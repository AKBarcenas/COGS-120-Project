<section class="animated fadeInUp">
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
				<a href="/profile">BACK TO PROFILE</a>
			<h2 style="text-align: center;">Your Favorites</h2>
		</div>
	</div>
	{{#each favorites}}
		<div class="row" style="display: block;">
			<div class="col-md-6 col-md-offset-3">	
				<p>{{name}} --- {{description}}</p>
				<p>{{location}}</p>
				<a href="#" class="deleteBtn">DELETE</a>
				<hr>
			</div>
		</div> <!-- End row -->
	{{/each}}
</div> <!-- End Container -->
</section> 	
<script>
		$(".deleteBtn").click(function(){
			$(this).prev().remove();
 			$(this).prev().remove();
 			$(this).next().remove();
 			$(this).remove();
		});
</script>
